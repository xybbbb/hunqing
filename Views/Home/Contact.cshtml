@{
    ViewBag.Title = "团队成员";
}

<div class="page-header-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="header-page">
                    <h1>我们的团队 </h1>
                    <ul>
                        <li> <a href="/Mo/Index">首页</a> </li>
                        <li>团队</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page Header Section End Here -->
<!--介绍-->
<!-- Home Page Team Start Here -->
<div id="home-page-team-area" class="home-page-team-area" v-cloak>
    <div class="container">
        <div class="introduce">
            <h2>他们将给予你最好的服务</h2>
            <p>我们拥有让您满意的超级团队...</p>
        </div>
        <div class="row total-team">
            @foreach (var item in ViewBag.yuan as List<WeddingProject.Models.Yuan>)
            {
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 text-center">
                    <div class="total-team-area">
                        <div class="single-team-area">
                            <a href="/Home/CaXun/@item.ID"  target="_blank">
                                @switch (item.typeid)
                                {
                                    case 1:
                                        <img src="/Content/img/team/2.png" alt="">
                                        break;
                                    case 2:
                                        <img src="/Content/img/team/1.png" alt="">
                                        break;
                                    case 3:
                                        <img src="/Content/img/team/4.png" alt="">
                                        break;
                                    case 4:
                                        <img src="/Content/img/team/3.png" alt="">
                                        break;
                                    default:
                                        <img src="/Content/img/team/3.png" alt="">
                                        break;
                                }
                            </a>
                            <div class="details">
                                <a href="/Home/CaXun/@item.ID"  target="_blank">查看</a>
                            </div>
                        </div>
                    </div>
                    <div class="team-detals-area">
                        <h3><a href="/Home/CaXun/@item.ID"  target="_blank"> @item.type_y.name</a></h3>
                        <p class="designation">@item.Name</p>
                        <p class="designation">服务费：@item.price 元 &nbsp;  性别： @item.Sex</p>
                    </div>
                </div>
            }


        </div>
    </div>
</div>
