
@{
    ViewBag.Title = "影视基地";
}
@using WeddingProject.Models
<style>
    .card {
        position: relative;
        transition: transform 0.2s ease-in-out;
        margin:10% 0 5% 0;
    }

        .card:hover {
            transform: translateY(-10px);
        }
    .col-sm-4:hover h4 {
        color:red;
    }

    .card:hover .card-body {
        bottom: 20px;
        opacity: 1;
    }

        .card .card-body {
            position: absolute;
            bottom: -20px;
            left: 0;
            right: 0;
            opacity: 0;
            transition: all 0.3s ease-in-out;
        }
        .card .card-body {
            position: absolute;
            bottom: -20px;
            left: 0;
            right: 0;
            opacity: 0;
            transition: all 0.3s ease-in-out;
            background-color: rgba(0, 0, 0, 0.6);
            color: #fff;
            padding: 10px;
        }
  
</style>
<div class="container" style="margin-top:20px;">
    <!-- 导航栏 -->
   
    <div class="row">
        <nav class="navbar navbar-default">
            <div class="col-md-7">

                <h3 style="margin:0;">婚纱摄影 </h3>
                <span>WEDDING</span>

            </div>
            <div class="col-md-5">
                <form class="navbar-form navbar-right" action="/Home/Se" method="post">

                    <input type="text" class="form-control" name="name" placeholder="搜索">

                    <button type="submit" class="btn btn-default">提交</button>

                </form>
            </div>
        </nav>
    </div>
  
   
    <!-- 分类标签 -->
    <div class="row">
        @foreach (var item in Model as List<Changdi>)
        {
            <div class="col-sm-4">
                <div class="card">
                    <img class="card-img-top" src="~/Content/img/changdi/@item.Img"  style="width:100%; max-height:300px"alt="Card image cap">

                    <div class="card-body">
                        <h3 class="card-title">@item.Name</h3>
                        <p class="card-text">地址：<span>@item.Addr</span></p>
                        <p class="card-text">价格：<span class="text-danger">@item.Price￥</span></p>
                        <a href="/Mo/She/@item.ID" class="btn btn-primary" target="_blank">查看详情</a>
                    </div>

                </div>
                <h4 class="card-title" style="text-align:center">@item.Name</h4>
            </div>
        }
    </div>
    <div aria-label="Page navigation example" style="display: flex; justify-content: center; align-items: center; width: 100%; height: 100%;">

        <ul class="pagination">
            @PagerHelper.Pager(ViewBag.TotalItems, ViewBag.PageNumber, ViewBag.PageSize, new Func<int, string>(page => Url.Action("Sheying", new { page })))
        </ul>

    </div>
</div>
<script>
    (document).ready(function () {
        (".card img").hover(function () {
            (this).addClass('transition');
        }, function () {
            (this).removeClass('transition');
        });
    });
</script>