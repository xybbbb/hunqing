                <a href="/Home/Index?id=4" class="aaa">韩式</a>
                <a href="/Home/Index?id=5" class="aaa">唯美</a>
                <a href="/Home/Index?id=6" class="aaa">小清新</a>
                <a href="/Home/Index?id=7" class="aaa">中国风</a>
                <a href="/Home/Index?id=8" class="aaa">简洁</a>
                <a href="/Home/Index?id=9" class="aaa">主题</a>
                <a href="/Home/Index?id=10" class="aaa">大气</a>
                <a href="/Home/Index?id=11" class="aaa">梦幻</a>
                <a href="/Home/Index?id=12" class="aaa">复古</a></div>
            </div>
        </div>
        <div class="screenprice">
            <div class="row screenrow">
                <div class="col-md-1  screenname">价格</div>
                <div class="col-md-8 allscreen">
                    <a href="/Home/Index/" class="aaa fontcolor1">不限</a>
                    <a href="/Home/Index?Range=5000以下" class="aaa">5000以下</a>
                    <a href="/Home/Index?Range=5000-10000" class="aaa">5000-10000</a>
                    <a href="/Home/Index?Range=10000-20000" class="aaa">10000-20000</a>
                    <a href="/Home/Index?Range=20000-30000" class="aaa">20000-30000</a>
                    <a href="/Home/Index?Range=30000-50000" class="aaa">30000-50000</a>
